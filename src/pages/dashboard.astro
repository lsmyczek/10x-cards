---
import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { Sparkles, Files } from "lucide-react";
---

<DashboardLayout title="Dashboard">
    <div class="grid place-items-center h-[70%]">
      <div class="flex gap-2 flex-col items-center justify-center">
       <h1 class="text-4xl md:text-6xl font-bold text-center max-w-[60%] md:max-w-full"> Welcome to 10<span class="bg-gradient-to-br from-indigo-600 to-teal-500 inline-block text-transparent bg-clip-text"
        >x</span>Cards!</h1>
       <p class="text-xltext-muted-foreground">
        The best way to learn new things.
       </p>
       <div class="flex flex-col md:flex-row gap-4 mt-4">
        <a href="/flashcards" class={buttonVariants({ size: "lg", variant: "outline" })}>
          <Files className="w-4 h-4" />
            My flashcards
        </a>
        <a href="/generate" class={buttonVariants({ size: "lg"})}>
            <Sparkles className="w-4 h-4" />
            Generate flashcards
        </a>

       </div>
      </div>
    </div>
</DashboardLayout>