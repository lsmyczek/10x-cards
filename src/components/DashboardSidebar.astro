---
import DashboardSidebarNav from '@/components/DashboardSidebarNav.astro';
import { navItems } from '@/lib/utils/navItems';
import { Info } from 'lucide-react';
---

<aside class="sticky top-0 left-0 w-full z-20 max-w-[300px] h-screen hidden xl:block ">
    <div class="flex flex-col justify-between h-full
    w-full bg-transparent bg-gradient-to-b from-white to-white/20 hover:bg-white backdrop-blur-xl rounded-r-3xl border border-black/5 shadow-[10px_0_20px_rgba(0,0,0,0.05)] transition-colors duration-500">

    <div class="flex flex-col py-8 px-4 gap-12">
      <a href="/dashboard/" class="text-3xl font-bold">
        10<span class="bg-gradient-to-br from-indigo-600 to-teal-500 inline-block text-transparent bg-clip-text"
        >x</span>Cards
      </a>
      <DashboardSidebarNav navItems={navItems} />
    </div>

    <div class="flex flex-col py-8 px-4 gap-12">
        <a href="/about" class="flex items-center gap-2 text-sm text-muted-foreground hover:text-primary transition-colors duration-200">
            <Info className="w-4" />
            About 10xCards
        </a>
    </div>
    </div>
  </aside>