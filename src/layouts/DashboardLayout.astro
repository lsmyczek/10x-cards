---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import DashboardSidebar from "../components/DashboardSidebar.astro";
import DashboardNavbar from "../components/DashboardNavbar.astro";
import FancyBg from "../components/FancyBg.astro";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/auth/sign-in");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative min-h-full w-full grid grid-cols-1 xl:grid-cols-[260px_1fr] gap-0">
      <DashboardSidebar />
      <main class="relative z-5 px-4 md:px-8 xl:px-16 pb-16">
        <DashboardNavbar />
        <slot />
      </main>
      <Toaster client:load />
      <FancyBg />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
