---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import FancyBg from "@/components/FancyBg.astro";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="grid place-items-center h-full relative z-5">
      <div class="flex flex-col w-full items-center justify-center gap-6 mb-6">
        <a href="/" class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-4xl">
          10<span class="bg-gradient-to-br from-indigo-500 to-teal-400 inline-block text-transparent bg-clip-text mx-1"
            >x</span
          >Cards
        </a>
        <slot />
      </div>
    </div>
    <FancyBg />
    <Toaster client:load />
    <script define:vars={{ user }}>
      // Make user data available globally for client components
      window.USER_DATA = user;
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
